{#
/**
 * @file
 * Theme override for a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
<div class="form--inline clearfix">
  {#{{ form }}#}
  {{ form.category_name }}
  <div class="es-ranger">
    {#{{ TODO: fix trans }}#}
    <label class="es-ranger__label">Year</label>
    {{ form.year }}
  </div>
  <div class="es-ranger">
    {#{{ TODO: fix trans }}#}
    <label class="es-ranger__label">Kilometers</label>
    {{ form.kilometers }}
  </div>
  <div class="es-ranger">
    {#{{ TODO: fix trans }}#}
    <label class="es-ranger__label">Price</label>
    {{ form.price }}
  </div>
  {#{{ breakpoint() }}#}

  {{ form.brand }}
  {{ form.model }}
  {{ form.full_description }}
  {{ form.actions }}

</div>

